      local asset_path="${BCD_PATH}"
      _latest_commit_raw_asset
      ;;
    remove) rm -vf "${BIN_PATH}"/jq "${BCD_PATH}"/jq ;;
    clean) rm -vf jq-* ;;
    info) _getinfo ;;
    *) false ;;
  esac
}

