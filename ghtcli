             "${BCD_PATH}"/velero \
             "${ZCD_PATH}"/_velero \
             "${FCD_PATH}"/velero.fish
      ;;
    clean) rm -vf velero-* ;;
    info) _getinfo ;;
    *) false ;;
  esac
}

